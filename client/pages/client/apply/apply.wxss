.stepper {
	width: 100px;
	height: 26px;
	border: 1px solid #ccc;
	border-radius: 3px;
	margin:0 auto;
}
 
.stepper text {
	width: 20px;
	line-height: 20px;
	text-align: center;
	float: left;
}
 
.stepper label {
	width: 30px;
	height: 26px;
	float: left;
	margin: 0 auto;
	text-align: center;
	font-size: 16px;
	border-left: 1px solid #ccc;
	border-right: 1px solid #ccc;
}
 
.stepper .normal{
	color: black;
  font-size: 30px;
  width: 30px;
}
 
.stepper .disabled{
