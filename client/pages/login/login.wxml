<form bindsubmit="login" bindreset="formReset">
<view class="weui-cells__title">管理员登录</view>
<view class="weui-cells weui-cells_after-title">
    <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
            <view class="weui-label">用户名</view>
        </view>
        <view class="weui-cell__bd">
            <input class="weui-input" name="username" placeholder="请输入用户名"/>
        </view>
    </view>
    <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
            <view class="weui-label">密码</view>
        </view>
        <view class="weui-cell__bd">
            <input class="weui-input" password="true" name="password" placeholder="请输入密码"/>
        </view>
    </view>
</view>
<view class="weui-btn-area">
    <button formType="submit" class="weui-btn" type="primary">登录</button>
</view>
</form>